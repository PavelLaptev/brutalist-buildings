.tooltip
    z-index: 99
    display: none
    width: 300px
    position: absolute
    pointer-events: none
    background: #fff
    border: 4px solid #000
    &__vorschau
        width: 100%
        height: 200px
        background: repeating-linear-gradient(
            45deg,
            #000,
            #000 50px,
            #fff 50px,
            #fff 100px
        );
        background-size: 500% 500%
        animation: loopLoading 1s ease infinite
        &__image
            width: 100%
            height: 100%
            background-size: cover
            background-repeat: no-repeat
    &__inhalt
        position: relative
        padding: 20px
    &__titel
        font-family: 'Montserrat', sans-serif
        font-weight: 800
        font-size: 20px
    &__autor
        margin-top: 8px
        font-family: 'Montserrat', sans-serif
        font-weight: 400
        font-size: 16px
        opacity: 0.5
    &__jahr-staat
        text-transform: uppercase
        margin-top: 12px
        font-family: 'Montserrat', sans-serif
        font-weight: 400
        font-size: 14px
        opacity: 1
    &__status
        position absolute
        top: -20px
        right: 20px
        padding: 4px 8px
        color: #fff
        font-family: 'Space Mono', monospace
        font-weight: bold
        text-align: right 


@keyframes loopLoading
    0%
        background-position: 15% 0%
    50%
        background-position: 86% 100%
    100%
        background-position: 15% 0%
